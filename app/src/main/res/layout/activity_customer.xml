<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    android:background="@android:color/white"
    tools:context=".CustomerActivity">
    <ImageView
        android:id="@+id/fixer"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/framelayout" />

    <TextView
        android:id="@+id/textServicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicios"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fixer" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="Soluciones para el hogar, siempre que necesites"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textServicios" />

    <Button
        android:id="@+id/fontaneriaButton"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        android:text="Fontanería"
        android:backgroundTint="#006C81"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/electricistaButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/limpiezaButton"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="168dp"
        android:text="Limpieza"
        android:backgroundTint="#006C81"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/electricistaButton"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/electricistaButton"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        android:text="Instalaciones Eléctricas"
        android:backgroundTint="#006C81"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fontaneriaButton"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/pinturaButton"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        android:text="Pintura"
        android:backgroundTint="#006C81"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fontaneriaButton"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#7AE8EBEB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/servicesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_grid_negro"
            android:text="Servicios"
            android:backgroundTint="@android:color/white"
            android:background="?attr/selectableItemBackground"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center" />
        <Button
            android:id="@+id/activityButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_playlist_add_check_24"
            android:text="Actividad"
            android:background="?attr/selectableItemBackground"
            android:textColor="#006C81"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/baseline_profile"
            android:text="Perfil"
            android:background="?attr/selectableItemBackground"
            android:textColor="#006C81"
            android:textStyle="bold"
            android:gravity="center" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>